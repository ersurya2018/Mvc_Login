@model MVCLoginSurya.Models.Registration
<style>
    .error{
        color:red; 
    }
</style>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Enter Email..", @required = "required" })
        <div class="error">@TempData["invalid"]</div>
        </div>
        <div class="form-group">
            <label>Password</label>
            @Html.TextBoxFor(m => m.password, new { @class = "form-control", @placeholder = "Enter password..", @required = "required" })
        <div class="error">@TempData["invalidpass"]</div>
            <br />
        </div>
            <button type="submit" class="btn btn-success">Login</button>
            }
      

<div class="error">@TempData["valid"]</div>
